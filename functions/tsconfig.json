{
	"compilerOptions": {
		"module": "ES2020",
		"moduleResolution": "node",
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noImplicitAny": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "lib",
		"sourceMap": true,
		"strict": true,
		"lib": ["ESNext"],
		"target": "ES2021",
		"allowSyntheticDefaultImports": true
	},
	"compileOnSave": true,
	"include": ["src", ".eslintrc.cjs"],
	"exclude": ["node_modules"]
}
